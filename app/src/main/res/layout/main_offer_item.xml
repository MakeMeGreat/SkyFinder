<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="224dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/main_offer_item_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/main_offer_item_image_1" />

    <TextView
        android:id="@+id/main_offer_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="6dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_offer_item_image"
        tools:text="Die Antwoord" />

    <TextView
        android:id="@+id/main_offer_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_offer_item_name"
        tools:text="Будапешт" />

    <ImageView
        android:id="@+id/main_offer_item_price_image"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_margin="3dp"
        android:src="@drawable/air_tickets_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_offer_item_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/main_offer_item_price_image"
        app:layout_constraintStart_toEndOf="@id/main_offer_item_price_image"
        tools:text="от 22 264 ₽" />

</androidx.constraintlayout.widget.ConstraintLayout>